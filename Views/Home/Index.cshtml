@model Persona

@{
    ViewData["Title"] = "Pagina princial";
    DateTime hoy = DateTime.Now;
    var nombres = new List<string>() { "Felipe", "Luis", "Carlos"};

}



<div class="text-center">
    <ul>
        @foreach (var nombre in nombres)
        {
           <li>@nombre</li> 
        }
    </ul>

    <h1 class="display-4">Soy @Model.Nombre.ToUpper() (@Model.Edad) </h1>
    <h4>@hoy.ToString("dd/MM/yyyy hh:mm:ss tt")</h4>
        
    @if(Model.Edad >= 18)
    {
        <h4>Eres mayor de edad <button>Entrar</button></h4>
    }
    else
    {
        <h4>Eres menor de edad </h4>
    }
    
    <h2>Soy un aprendiz de desarrollador full stack </h2>
      <h2>en tecnologias .Net y Javascript</h2>

   <img 
   id="foto"
   src="~/Imagenes/foto.png" alt ="foto de Luis" />

</div>

